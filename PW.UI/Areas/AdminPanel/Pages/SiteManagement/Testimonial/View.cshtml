@model PW.ApplicationContracts.ViewModels.TestimonialViewModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">مشاهده خاطرات</h4>
</div>

<form asp-page="./Index" asp-page-handler="View"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <input type="hidden" asp-for="Id" value="@Model.Id">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="StudentImg" class="control-label">تصویر</label>
                    @{ if (string.IsNullOrWhiteSpace(Model.StudentImg))
                        {

                <img src="~/Uploads/UsersManagement/userMale.png" style="width:70px;height:70px" /> 
        }
        else
        {
                <img src="~/Uploads/@Model.StudentImg" style="width:70px;height:70px" /> } }
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StudentName" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="StudentName" disabled>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StudentEmail" class="control-label">ایمیل</label>
                    <input type="text" class="form-control" asp-for="StudentEmail" disabled>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CourseName" class="control-label">نام درس</label>
                    <input type="text" class="form-control" asp-for="CourseName" disabled>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UniversityName" class="control-label">نام دانشگاه</label>
                    <input type="text" class="form-control" asp-for="UniversityName" disabled>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="EduYear" class="control-label">سال تحصیلی</label>
                    <input type="text" class="form-control" asp-for="EduYear" disabled>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CreatedDate" class="control-label">تاریخ ثبت در سایت</label>
                    <input type="text" class="form-control" asp-for="CreatedDate" disabled>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Title" class="control-label">عنوان خاطره</label>
                    <input type="text" class="form-control" asp-for="Title" disabled>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Description" class="control-label">شرح خاطره</label>
                    <textarea asp-for="Description" rows="4" class="form-control b-box" disabled></textarea>
                </div>
            </div>

        </div>


    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
    </div>
</form>
