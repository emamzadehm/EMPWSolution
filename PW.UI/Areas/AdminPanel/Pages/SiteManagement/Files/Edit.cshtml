@model PW.ApplicationContracts.ViewModels.FileViewModel
@{ }
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title"> ثبت فایل </h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <input type="hidden" asp-for="Id" value="@Model.Id">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FileTypeId" class="control-label">دسته بندی فایل</label>
                    <select class="form-control" asp-for="FileTypeId">
                        <option value="Null">انتخاب دوره</option>
                        <option value="1">نمونه سوالات</option>
                        <option value="2">محتوای آموزشی و اسلایدها</option>
                        <option value="3">سایر فایل های قابل دانلود</option>
                    </select>
                    <span asp-validation-for="FileTypeId" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CourseId" class="control-label">درس مرتبط</label>
                    <select class="form-control" asp-for="CourseId"
                            asp-items='new SelectList(Model.CourseList, "Id", "Title")'>
                        <option value="Null">انتخاب دوره</option>
                        <option value="Null">بدون دوره</option>
                    </select>
                    <span asp-validation-for="CourseId" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Title" class="control-label">عنوان فایل</label>
                    <input type="text" class="form-control" asp-for="Title">
                    <span asp-validation-for="Title" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="FileContent" class="control-label">نام فایل</label>
                    <input type="file" class="form-control b-box" asp-for="FileContent">
                    <span asp-validation-for="FileContent" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Description" class="control-label">شرح</label>
                    <textarea class="form-control autogrow" asp-for="Description"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="Description" class="error"></span>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>